{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - Yoi Sushi{% endblock %}

{% block content %}
    <h2>Finaliser votre commande</h2>
    <p>Choisissez votre adresse de livraison et vérifier votre commande avant de poursuivre.</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            <b>Choisir mon adresse de livraison</b>
            {% set formhtml %}
                {{ form_start(form, {'action': path('order_recap')}) }}
                {{ form_end(form) }}
            {% endset %}

            {{ formhtml|replace({'[br]' : '<br>'})|raw }}
        </div>
        <div class="col-md-6">
            <b>Retrouvez le récapitulatif de vos produits.</b>
            {% for product in cart %}
                <div class="row">
                    <div class="col-2">
                        <img src="/uploads/images/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px" width="75px">
                    </div>
                    <div class="col-8">
                        {{ product.product.name }} <br>
                        <small>{{ product.product.description }}</small>
                    </div>
                    <div class="col-2">x{{ product.quantity }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
