{% extends 'base.html.twig' %}

{% block title %}Nos produits - Yoi Sushi{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-3">
            <h1>Filtrer</h1>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h1>Nos produits</h1>

            <div class="row row-cols-1 row-cols-md-3 g-4 product-container">
                {% for product in products %}
                    <div class="col mb-4">
                        <div class="card h-100" style="width: 18rem;">
                            <img src="/uploads/images/{{ product.illustration }}" class="card-img-top img-fluid" style="height: 200px;">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h5 class="card-title">{{ product.name }}</h5>
                                    <p class="card-text">{{ product.description }}</p>
                                    <p class="card-text">{{ (product.price / 100)|number_format(2,',','.') }}â‚¬</p>
                                </div>
                                <div>
                                    <a href="#" class="btn btn-primary mt-auto">Ajouter au panier</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
